extends layout

include _includes/sharedHTMLfunctions

block content
    #banner.page-header
        .row
            .col-lg-8
                h3= pageHeader.title
                p= pageHeader.strapline
    .row
        .col-xs-12.col-sm-9
            .error= message
            .row.list-group
                each item in items
                    .col-xs-12.list-group-item
                        h4
                            a(href="/item/#{item.value._id}")= item.value.Title
                            span.p.pull-right= item.value.Author
                        p.address= item.value.ISBN
        .col-xs-12.col-sm-3
            a.btn.btn-primary.pull-right(href="/add-item")
                Add Add item

