extends layout
block content
    .row.page-header
        .col-lg-12
            h3 Add item
    .row
        .col-xs-12.col-md-6
            //- action set to an empty string posts to URL of current page
            form.form-horizontal(action="", method="post", role="form")
                .form-group
                    label.col-xs-2.col-sm-2.control-label(for="title") Title
                    .col-xs-10.col-sm-10
                        input#title.form-control(name="title")
                    label.col-xs-2.col-sm-2.control-label(for="author") Author
                    .col-xs-10.col-sm-10
                        input#author.form-control(name="author")
                    label.col-xs-2.col-sm-2.control-label(for="ISBN") ISBN
                    .col-xs-10.col-sm-10
                        input#ISBN.form-control(name="ISBN")
                    label.col-xs-2.col-sm-2.control-label(for="type") Type
                    .col-xs-10.col-sm-10
                        input#type.form-control(name="type")
                button.btn.btn-primary.pull-right Add item